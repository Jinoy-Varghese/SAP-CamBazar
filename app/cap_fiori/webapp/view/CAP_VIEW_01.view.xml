<mvc:View controllerName="capfiori.controller.CAP_VIEW_01"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:form="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="_IDGenVBox1" class="pageContainer">
                <HBox id="loginHBox" class="loginHBox">
                    <VBox id="imageContainer" class="imageContainer">
                        <Image id="_IDGenImage2" src="../../uploads/login-cam.jpg" alt="Login Image" class="loginImage" width="100%" />
                    </VBox>
                    <VBox id="formContainer" class="formContainer">
                        <form:SimpleForm  id="addressForm" title="Login" editable="true" layout="ResponsiveGridLayout" class="custform">
                            <Label text="User Name :" id="label0" class="mt-2" />
                            <Input placeholder="Enter Your User name" id="input0" />

                            <Label text="Password :" id="label1"/>
                            <Input placeholder="Enter Your Password" id="input1" type="Password" tooltip="Password Field"/>
                            
                            <Button id="_IDGenButton3" text="Login" type="Emphasized" class="customButton" press="onNavigateToList" />
                            <Button id="_IDGenButton4" text="Show Credentials" class="customButton" press="alertButton" />
                        </form:SimpleForm>
                    </VBox>
                </HBox>
            </VBox>
        </content>
        <footer>
            <Bar id="_IDGenBar1">
                <contentLeft>
                    <Text class="redtext" id="_IDGenText" text="copyright@jinoy"/>
                </contentLeft>
                <contentRight>
                    <Text id="_IDGenText3" text="C S Psyco"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
